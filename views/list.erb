<h1>List of things:</h1>
<ul>
  <% if @list.kind_of?(Array) %>
    <% @list.each do |each| %>
      <li id='<%= each.id %>'><a href='/item/<%= each.id %>'><%= each.name %></a></li>
    <% end %>
  <% else %>
    <li id='<%= @list.id %>'><a href='/item/<%= @list.id %>'><%= @list.name %></a></li>
  <% end %>

</ul>


<form action="/" method="post">
  <div class="form-group">
    <input type="text" name="name" placeholder="Name of your favorite thing to add">
  </div>
  <button type="submit" name="button">Add to list</button>
</form>
